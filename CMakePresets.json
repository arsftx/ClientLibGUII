{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
      },
    "include": [
        "./cmake/preset.json"
    ],
    
    "configurePresets": [
        {
            "name": "default",
            "inherits": [
                "config-default",
                "config-cpm"
            ]
        },{
            "name": "no-imgui",
            "inherits": [
                "config-default",
                "config-cpm"
            ],
            "cacheVariables": {
                "CONFIG_IMGUI": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "no-imgui",
            "configurePreset": "no-imgui"
        }
    ]
}
